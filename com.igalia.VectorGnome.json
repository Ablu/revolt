{
  "app-id": "com.igalia.VectorGnome",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.22",
  "sdk": "org.gnome.Sdk",
  "command": "vector",
  "finish-args": [
    "--device=dri",
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--socket=session-bus",
    "--own-name=com.igalia.VectorGnome",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.gtk.Notifications"
  ],
  "build-options": {
    "strip": false
  },
  "modules": [
    {
      "name": "vector-gnome",
      "sources": [
        {
          "type": "git",
          "url": "https://gogs.igalia.com/aperez/vector-gnome.git"
        }
      ]
    }
  ]
}
